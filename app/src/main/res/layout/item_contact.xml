<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_layout_margin_top"
    android:layout_marginBottom="@dimen/common_layout_margin_bottom"

    app:cardBackgroundColor="@color/first_background_color"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contact_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/item_contact_padding">

            <CheckBox
                android:id="@+id/ch_contact"
                android:layout_width="@dimen/checkbox_width"
                android:layout_height="@dimen/checkbox_height"
                android:layout_marginTop="@dimen/checkbox_margin_top"
                android:textColorLink="@color/white"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/avatar_height"
                android:layout_weight="2"
                android:contentDescription="@string/avatar_contact_icon"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_contact_phone_number_layout_margin_top"
                android:layout_weight="20"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/item_contact_phone_number_padding"
                android:paddingStart="@dimen/item_contact_phone_number_padding_start"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/item_contact_phone_number_text_size"
                app:autoSizeMinTextSize="@dimen/item_contact_phone_number_min_text_size"
                tools:text="8487848 5454" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/unnamed_margin_top"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_regular"
            android:padding="@dimen/unnamed_padding"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/unnamed_text_size"
            android:visibility="gone"
            tools:text="Салфетки" />

    </LinearLayout>

</androidx.cardview.widget.CardView>