<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_layout_margin_top"
    app:cardBackgroundColor="@color/first_background_color"

    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_contact_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/item_contact_last_phone_number_padding">

            <CheckBox
                android:id="@+id/ch_contact"
                android:layout_width="@dimen/checkbox_width"
                android:layout_height="@dimen/checkbox_height"
                android:layout_marginTop="@dimen/checkbox_margin_top"
                android:textColorLink="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_contact_last_example_number_margin_top"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/item_contact_last_example_number_padding"
                android:paddingStart="@dimen/item_contact_last_example_number_padding_start"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/item_contact_last_example_number_text_size"
                app:autoSizeMinTextSize="@dimen/item_contact_last_example_number_min_text_size"
                tools:text="8487848 5454" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_contact_last_example_margin_top"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa_regular"
            android:padding="@dimen/item_contact_last_example_padding"
            android:textAlignment="textEnd"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/item_contact_last_example_text_size"
            android:visibility="visible"
            app:autoSizeMinTextSize="@dimen/item_contact_last_example_min_text_size"
            tools:text="Салфетки" />

        <View
            android:id="@+id/vLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_contact_last_layout_height"
            android:background="@color/color_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />
    </LinearLayout>

</androidx.cardview.widget.CardView>