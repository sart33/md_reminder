<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:background="@color/image_background_mask"
android:id="@+id/day_container">

    <Button
        android:id="@+id/calendarDayButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/color_link"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="test"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/currentMark"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/background_none"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


<TextView
    android:id="@+id/currentDay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="2dp"
    android:textAppearance="?android:textAppearanceMedium"
    android:textColor="@color/color_primary_text"
    android:textStyle="bold" />

</RelativeLayout>