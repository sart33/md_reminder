<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiComponentSectionLabel" parent="@style/Theme.SartReminder">
        <item name="android:textAppearance">?textAppearanceLabelLarge</item>
        <item name="android:textColor">?colorTertiary</item>
    </style>

    <style name="UiComponentSectionLarge" parent="@style/Theme.SartReminder">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
